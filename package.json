{
  "name": "springstack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "test": "cucumber-js",
    "test:e2e": "concurrently -k --success first \"wait-on http://localhost:5173 && BASE_URL=http://localhost:5173 cucumber-js\" \"npm run dev --workspace apps/demo -- --strictPort\"",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.7.0",
    "@playwright/test": "^1.54.0",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^13.1.4",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "semantic-release": "^25.0.3",
    "wait-on": "^7.2.0"
  }
}
